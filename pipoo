  <script>
    const game = document.getElementById('game');
    const player = document.getElementById('player');
    const scoreDisplay = document.getElementById('score');

    let score = 0;
    let playerX = 50;

    document.addEventListener('keydown', e => {
      if (e.key === 'ArrowLeft') {
        playerX -= 20;
      } else if (e.key === 'ArrowRight') {
        playerX += 20;
      }
      playerX = Math.max(0, Math.min(window.innerWidth - 40, playerX));
      player.style.left = playerX + 'px';
    });

    function createObstacle() {
      const obs = document.createElement('div');
      obs.className = 'obstacle';
      obs.style.left = Math.floor(Math.random() * (window.innerWidth - 40)) + 'px';
      game.appendChild(obs);

      let y = 0;
      const interval = setInterval(() => {
        y += 4;
        obs.style.top = y + 'px';

        const obsX = parseInt(obs.style.left);
        if (
          y > window.innerHeight - 60 &&
          obsX < playerX + 40 &&
          obsX + 40 > playerX
        ) {
          alert('ğŸ’¥ Ø®Ø³Ø±Øª! Ø§Ù„Ù†ØªÙŠØ¬Ø©: ' + score);
          window.location.reload();
        }

        if (y > window.innerHeight) {
          clearInterval(interval);
          obs.remove();
          score++;
          scoreDisplay.innerText = 'Ø§Ù„Ù†ØªÙŠØ¬Ø©: ' + score;
        }
      }, 20);
    }

    setInterval(createObstacle, 1000);
  </script>
